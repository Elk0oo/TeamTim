             xmlns:local="clr-namespace:SeriousGame"
             x:Class="SeriousGame.MainPage">

    <StackLayout>
        <Label Text="SERIOUS GAME" 
           VerticalOptions="StartAndExpand" 
           HorizontalOptions="CenterAndExpand" 
           />

        <StackLayout   VerticalOptions="StartAndExpand" 
           HorizontalOptions="CenterAndExpand">
        <Label Text="CODE DU JEU" 
          />
        <Entry x:Name="txtNumSalle"></Entry>
        </StackLayout>
        <Button x:Name="btnValiderCode" BackgroundColor="Green" Text="Valider" TextColor="White"  
          VerticalOptions="EndAndExpand"
           HorizontalOptions="CenterAndExpand"></Button>
        </StackLayout>
</ContentPage>
